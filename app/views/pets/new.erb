<h1>Create a new Pet</h1>


<form action="/pets" method="post">

  <label>Pet Name:</label>
  <input id="pet_name" type="text" name="pet[name]">

  <br></br>

  <label>Choose an existing owner:</label>
  <br></br>
  <%Owner.all.each do |owner|%>
  <input id="<%=owner.id%>" type="checkbox" name="pet[owner_id]" value="<%=owner.id%>"> <%=owner.name%> <br></input>
  <%end%>

  <br></br>

  <label>and/or create a new owner:</label>
  <label>Name: </label>
  <input id="owner_name" type="text" name="owner[name]">

  <br></br>

  <input type="submit" value="Create Pet">
</form>


